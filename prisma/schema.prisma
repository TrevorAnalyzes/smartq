// SmartQ - AI Voice Agent Dashboard
// Prisma Schema for PostgreSQL Database

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ============================================
// ENUMS
// ============================================

enum AgentStatus {
  ACTIVE
  INACTIVE
  MAINTENANCE
  ERROR
}

enum AccentType {
  BRITISH_RP
  BRITISH_COCKNEY
  BRITISH_SCOTTISH
  BRITISH_WELSH
  BRITISH_NORTHERN
}

enum ConversationStatus {
  CONNECTED
  RINGING
  ENDED
  FAILED
}

enum Sentiment {
  POSITIVE
  NEUTRAL
  NEGATIVE
}

enum UserRole {
  ADMIN
  MANAGER
  AGENT
  VIEWER
}

enum OrganizationPlan {
  FREE
  PRO
  ENTERPRISE
}

enum CRMProvider {
  HUBSPOT
  SALESFORCE
  PIPEDRIVE
  ZOHO
}

enum CRMStatus {
  CONNECTED
  DISCONNECTED
  ERROR
  SYNCING
}

// ============================================
// MODELS
// ============================================

model Organization {
  id                   String           @id @default(cuid())
  name                 String
  domain               String           @unique
  plan                 OrganizationPlan @default(FREE)
  stripeCustomerId     String?
  stripeSubscriptionId String?
  monthlyCallLimit     Int?
  createdAt            DateTime         @default(now())
  updatedAt            DateTime         @updatedAt

  // Settings (JSON)
  defaultAccent        AccentType   @default(BRITISH_RP)
  crmProvider          CRMProvider?
  crmApiKey            String?
  emailAlerts          Boolean      @default(true)
  smsAlerts            Boolean      @default(false)
  webhookUrl           String?
  brandingPrimaryColor String       @default("#0066CC")
  brandingLogo         String?
  brandingCompanyName  String?

  // Relations
  users           User[]
  voiceAgents     VoiceAgent[]
  conversations   Conversation[]
  crmIntegrations CRMIntegration[]
  crmContacts     CRMContact[]
  crmDeals        CRMDeal[]
  crmCompanies    CRMCompany[]
  usageEvents     UsageEvent[]
  activities      Activity[]

  @@index([domain])
  @@index([plan])
}

model User {
  id             String    @id @default(cuid())
  email          String    @unique
  name           String
  role           UserRole  @default(VIEWER)
  organizationId String
  permissions    String[] // Array of permission strings
  createdAt      DateTime  @default(now())
  lastLoginAt    DateTime?
  updatedAt      DateTime  @updatedAt

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([email])
  @@index([organizationId])
  @@index([role])
}

model VoiceAgent {
  id             String      @id @default(cuid())
  name           String
  status         AgentStatus @default(INACTIVE)
  accentType     AccentType  @default(BRITISH_RP)
  phoneNumber    String?
  description    String?
  organizationId String
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  // Relations
  organization  Organization   @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  conversations Conversation[]

  @@index([organizationId])
  @@index([status])
  @@index([accentType])
}

model Conversation {
  id             String             @id @default(cuid())
  agentId        String
  organizationId String
  customerPhone  String
  customerName   String?
  status         ConversationStatus @default(RINGING)
  duration       Int? // Duration in seconds
  transcript     String?            @db.Text
  sentiment      Sentiment?
  outcome        String?
  topic          String?
  startedAt      DateTime           @default(now())
  endedAt        DateTime?
  createdAt      DateTime           @default(now())
  updatedAt      DateTime           @updatedAt

  // Relations
  agent        VoiceAgent   @relation(fields: [agentId], references: [id], onDelete: Cascade)
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([agentId])
  @@index([organizationId])
  @@index([status])
  @@index([sentiment])
  @@index([startedAt])
  @@index([customerPhone])
}

model CRMIntegration {
  id             String      @id @default(cuid())
  organizationId String
  provider       CRMProvider
  status         CRMStatus   @default(DISCONNECTED)
  config         Json // Stores CRMConfig including credentials
  webhookSecret  String?
  lastSync       DateTime?
  lastSyncResult Json? // Stores SyncResult
  contactsCount  Int         @default(0)
  dealsCount     Int         @default(0)
  companiesCount Int         @default(0)
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  contacts     CRMContact[]
  deals        CRMDeal[]
  companies    CRMCompany[]

  @@unique([organizationId, provider])
  @@index([organizationId])
  @@index([provider])
  @@index([status])
}

model CRMContact {
  id             String      @id @default(cuid())
  organizationId String
  provider       CRMProvider
  externalId     String // ID from the CRM system
  email          String
  firstName      String?
  lastName       String?
  fullName       String?
  phone          String?
  company        String?
  jobTitle       String?
  tags           String[]
  customFields   Json?
  lastActivityAt DateTime?
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  // Relations
  organization   Organization   @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  crmIntegration CRMIntegration @relation(fields: [organizationId, provider], references: [organizationId, provider], onDelete: Cascade)

  @@unique([organizationId, provider, externalId])
  @@index([organizationId])
  @@index([provider])
  @@index([email])
  @@index([externalId])
}

model CRMDeal {
  id                String      @id @default(cuid())
  organizationId    String
  provider          CRMProvider
  externalId        String // ID from the CRM system
  title             String
  value             Float
  currency          String      @default("GBP")
  stage             String
  probability       Float?
  contactId         String?
  companyId         String?
  ownerId           String?
  expectedCloseDate DateTime?
  customFields      Json?
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt

  // Relations
  organization   Organization   @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  crmIntegration CRMIntegration @relation(fields: [organizationId, provider], references: [organizationId, provider], onDelete: Cascade)

  @@unique([organizationId, provider, externalId])
  @@index([organizationId])
  @@index([provider])
  @@index([stage])
  @@index([externalId])
}

model CRMCompany {
  id             String      @id @default(cuid())
  organizationId String
  provider       CRMProvider
  externalId     String // ID from the CRM system
  name           String
  domain         String?
  industry       String?
  size           String?
  phone          String?
  address        String?
  customFields   Json?
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  // Relations
  organization   Organization   @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  crmIntegration CRMIntegration @relation(fields: [organizationId, provider], references: [organizationId, provider], onDelete: Cascade)

  @@unique([organizationId, provider, externalId])
  @@index([organizationId])
  @@index([provider])
  @@index([name])
  @@index([externalId])
}

model UsageEvent {
  id             String   @id @default(cuid())
  organizationId String
  type           String // e.g. call_started, call_completed
  units          Int // e.g. 1 per call, or seconds
  createdAt      DateTime @default(now())

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId])
  @@index([type])
  @@index([createdAt])
}

model Activity {
  id             String     @id @default(cuid())
  organizationId String
  type           String // call_completed, call_started, call_failed, etc.
  agentName      String?
  customerName   String?
  customerPhone  String?
  duration       String?
  outcome        String?
  status         String? // success, active, failed
  sentiment      Sentiment?
  timestamp      DateTime   @default(now())
  createdAt      DateTime   @default(now())

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId])
  @@index([type])
  @@index([timestamp])
}
